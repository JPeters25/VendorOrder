@{
  Layout = "_Layout";
}

  @using VendorTracker.Models;
  <h1>Your Vendors</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Vendors have been added yet!</h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.vendorName</a></h3>
  }

  <p><a href='/'>Back to Home</a></p>